<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentBorclularMusteri">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background2"
            android:gravity="center">

            <TextView
                android:id="@+id/textBaslik2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="BORÇLULAR LİSTESİ"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="">

            <TextView
                android:id="@+id/textSutun1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Ad Soyad"

                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textSutun2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="TC"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textSutun3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Telefon"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textSutun4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Borç Tutarı"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textSutun5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="İşlem Tarihi"

                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textSutun6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Ödeme Tarihi"
                android:textColor="@color/white" />



        </TableRow>

        <TableRow>

            <ListView
                android:id="@+id/listView_Borclular"
                android:layout_width="730dp"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:backgroundTint="@color/white"

                />

        </TableRow>



    </TableLayout>

</FrameLayout>